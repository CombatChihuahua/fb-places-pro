{
  "manifest_version": 2,

  "name": "fb-places-pro",
  "short_name" : "fbpp",
  "description": "This extension enhances the productivity of the fb places editor.",
  "version": "0.1.0",
  "icons": { "128": "fbpp-128.png" },

  "permissions": [
    "https://www.facebook.com/editor",
    "https://dev.virtualearth.net/",
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["jquery.min.js","bg.js"],
    "persistent": false
  },

  "page_action": {
    "default_title": "fb places pro",
    "default_icon": "fbpp-32.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ecn.dev.virtualearth.net https://dev.virtualearth.net; object-src 'self'"
}
